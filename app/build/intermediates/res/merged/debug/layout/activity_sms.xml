<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="hihebark.cryptor.SMSActivity">
    <android.support.v7.widget.ListViewCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listsms"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:minHeight="200dp"
        android:background="@drawable/background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginBottom="2dp"
            tools:ignore="NestedWeights">
            <EditText
                android:id="@+id/phonenbr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/_number_exemple"
                android:inputType="phone|textMultiLine|textFilter|textVisiblePassword|textNoSuggestions"
                android:background="#c8ffffff"
                tools:ignore="NestedWeights"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/btncontact"
                android:background="#fff"
                app:srcCompat="@drawable/ic_contact_phone_black_24dp"
                tools:ignore="ContentDescription"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/smstxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="20dp"
                android:ems="10"
                android:inputType="textMultiLine|textFilter|textVisiblePassword|textNoSuggestions"
                android:lines="5"
                android:hint="@string/sms_tape"
                android:layout_weight="1"
                android:background="#c8ffffff"
                tools:ignore="NestedWeights"
                android:maxLength="140"/>
            <ImageButton
                android:id="@+id/btnsend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_message_black_24dp"
                tools:ignore="ContentDescription"
                android:background="#fff"
                android:layout_weight="5"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>